# Staging Environment Configuration
NODE_ENV=staging
BUILD_TARGET=production

# Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# API Configuration
NEXT_PUBLIC_API_URL=https://api-staging.galactic-crossword.com/api

# Database (PostgreSQL recommended for staging/production)
DATABASE_URL="postgresql://crossword_user:staging_password@staging-db:5432/crossword_staging?schema=public"

# Security (use strong secrets from environment variables)
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRE=7d
SESSION_SECRET=${STAGING_SESSION_SECRET}
PUZZLE_SECRET=${STAGING_PUZZLE_SECRET}

# OAuth (staging credentials)
GOOGLE_CLIENT_ID=${STAGING_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${STAGING_GOOGLE_CLIENT_SECRET}

# Redis
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# Auto-solve Configuration
AUTO_SOLVE_COOLDOWN_HOURS=12

# Logging
LOG_LEVEL=info

# Security flags
ENABLE_SWAGGER=false
ENABLE_CORS_ALL=false
ALLOWED_ORIGINS=https://staging.galactic-crossword.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/staging.crt
SSL_KEY_PATH=/etc/nginx/ssl/staging.key