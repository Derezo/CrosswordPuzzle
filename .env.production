# Production Environment Configuration
NODE_ENV=production
BUILD_TARGET=production

# Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# API Configuration
NEXT_PUBLIC_API_URL=https://api.galactic-crossword.com/api

# Database (PostgreSQL for production)
DATABASE_URL="postgresql://crossword_user:${PRODUCTION_DB_PASSWORD}@production-db:5432/crossword_production?schema=public&sslmode=require"

# Security (use strong secrets from environment variables)
JWT_SECRET=${PRODUCTION_JWT_SECRET}
JWT_EXPIRE=7d
SESSION_SECRET=${PRODUCTION_SESSION_SECRET}
PUZZLE_SECRET=${PRODUCTION_PUZZLE_SECRET}

# OAuth (production credentials)
GOOGLE_CLIENT_ID=${PRODUCTION_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${PRODUCTION_GOOGLE_CLIENT_SECRET}

# Redis
REDIS_PASSWORD=${PRODUCTION_REDIS_PASSWORD}

# Auto-solve Configuration
AUTO_SOLVE_COOLDOWN_HOURS=12

# Logging
LOG_LEVEL=warn

# Security flags
ENABLE_SWAGGER=false
ENABLE_CORS_ALL=false
ALLOWED_ORIGINS=https://galactic-crossword.com

# Rate limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/production.crt
SSL_KEY_PATH=/etc/nginx/ssl/production.key

# Monitoring and alerting
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}

# Backup configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${PRODUCTION_BACKUP_BUCKET}
BACKUP_S3_REGION=${PRODUCTION_BACKUP_REGION}