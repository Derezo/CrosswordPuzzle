# Production Environment Configuration
NODE_ENV=production
BUILD_TARGET=production

# Ports
BACKEND_PORT=5001
FRONTEND_PORT=3001

# API Configuration
NEXT_PUBLIC_API_URL=https://crossword.mittonvillage.com/api

# Database (SQLite for production)
DATABASE_URL="file:./prisma/production.db"

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=7d
SESSION_SECRET=${SESSION_SECRET}
PUZZLE_SECRET=${PUZZLE_SECRET}

# OAuth (Configure in production)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}

# Auto-solve Configuration
AUTO_SOLVE_COOLDOWN_HOURS=12

# Logging
LOG_LEVEL=info

# Production flags
ENABLE_SWAGGER=false
ENABLE_CORS_ALL=false
CORS_ORIGIN=https://crossword.mittonvillage.com
