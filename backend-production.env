# Production Environment Configuration
NODE_ENV=production
PORT=5001

# Database (SQLite for production)
DATABASE_URL="file:./prisma/production.db"

# Security (need to set these with actual values)
JWT_SECRET=your-super-secret-jwt-key-production
JWT_EXPIRE=7d
SESSION_SECRET=your-session-secret-production
PUZZLE_SECRET=your-puzzle-generation-secret-production

# OAuth (Configure in production)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Auto-solve Configuration
AUTO_SOLVE_COOLDOWN_HOURS=12

# Logging
LOG_LEVEL=info

# Production flags
ENABLE_SWAGGER=false
ENABLE_CORS_ALL=false
CORS_ORIGIN=https://crossword.mittonvillage.com